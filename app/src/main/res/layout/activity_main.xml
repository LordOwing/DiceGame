        android:id= "@+id/wynik_gry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik gry:"

        />
    <TextView
        android:id= "@+id/rzuty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów:"

        />
    <Button
        android:id ="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESETUJ GRĘ"
        />
    </LinearLayout>
</RelativeLayout>